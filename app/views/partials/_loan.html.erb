<div class="well bs-component" style="margin:0 auto; width:500px; height:320px">
	<div style="width:450px">
		<h3 style="margin-top:10px; margin-left:10px;">Loan Payoff Calculator</h3>
	</div>

	<div style="width:460px; height:45px;">
		<div style="width:180px; height:45px; float:left;">
			<h5 style="text-align:right; margin-top:15px; margin-right:10px; ">Loan Amount ($)</h5>
		</div>
		
		<div style="width:260px; height:45px; float:left;">
			<input style="width:200px; margin-top:2px; margin-left:20px;" class="form-control" placeholder="In dollars..." onkeypress="return isNumberKey(event)" id="amount" type="text">
		</div>
	</div>

	<div style="width:460px; height:45px;">
		<div style="width:180px; height:45px; float:left;">
			<h5 style="text-align:right; margin-top:15px; margin-right:10px; ">Loan Interest (%)</h5>
		</div>
		<div style="width:260px; height:45px; float:left;">
			<input style="width:200px; margin-top:2px; margin-left:20px;" class="form-control" placeholder="As a percentage..." onkeypress="return isNumberKey(event)" id="interest" type="text">
		</div>
	</div>

	<div style="width:460px; height:45px;">
		<div style="width:180px; height:45px; float:left;">
			<h5 style="text-align:right; margin-top:15px; margin-right:10px; ">Loan Term</h5>
		</div>
		<div style="width:260px; height:45px; float:left;">
			<input style="width:200px; margin-top:2px; margin-left:20px;" class="form-control" placeholder="In years..." onkeypress="return isNumberKey(event)" id="time" type="text">
		</div>
	</div>

	<div style="width:460px; height:45px;">
		<div style="width:180px; height:45px; float:left;">
			<h5 style="text-align:right; margin-top:15px; margin-right:10px; ">Monthly Payment</h5>
		</div>
		<div style="width:260px; height:45px; float:left;">
			<input style="width:200px; margin-top:2px; margin-left:20px;" class="form-control" readonly id="payment" type="text"/>
		</div>
	</div>

	<div style="width:460px; height:45px;">
		<button style="float:right; margin-right:60px;" class="btn btn-primary" id="subm" onclick="calculate();">Submit</button>
		<button style="float:right" class="btn btn-default" id="clr" onclick="clearFields();">Clear</button>
	</div>
</div>

<script>
	if (sessionStorage.getItem("colors"))
	{
	    var c = jQuery.parseJSON(unescape(sessionStorage.getItem("colors")));
	    $('#subm').css({"background-color":c["p_hex"]});
	    $('#clr').css({"color":c["p_hex"]});
	}
</script>