{
  "apiVersion": "v2",
  "swaggerVersion": "1.2",
  "basePath": "/",
  "resourcePath": "cost_of_living",
  "apis": [
    {
      "path": "/api/v2/cost_of_living",
      "operations": [
        {
          "method": "GET",
          "summary": "Returns all locations.",
          "type": "string",
	  "nickname": "Api::V2::Coli#index"
	}
      ]
    },
    {
      "path": "/api/v2/cost_of_living/{state}",
      "operations": [
        {
          "method": "GET",
          "summary": "Returns all available locations in a given state.",
          "type": "string",
          "nickname": "Api::V2::Coli#show_state",
          "parameters": [
            {
              "name": "state",
              "description": "The name of a US state.",
              "required": true,
              "type": "string",
              "paramType": "path"
            }
          ]
        }
      ]
    },
    {
      "path": "/api/v2/cost_of_living/{state}/{city}",
      "operations": [
        {
          "method": "GET",
          "summary": "Returns cost of living information for a given city.",
          "type": "string",
          "nickname": "Api::V2::Coli#show_city",
          "parameters": [
            {
              "name": "state",
              "description": "The name of a US state.",
              "required": true,
              "type": "string",
              "paramType": "path"
            },
            {
              "name": "city",
              "description": "The name of a city in the given state.",
              "required": true,
              "type": "string",
              "paramType": "path"
            }
          ]
        }
      ]
    }
  ]
}
