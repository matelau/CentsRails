{
  "apiVersion": "v2",
  "swaggerVersion": "2.0",
  "info": {
    "version": "2.0.0",
    "title": "Cents API",
    "description": "The API for Cents.", 
    "contact": {
      "name": "Team FDE",
      "url": "admin@trycents.com"
    }
  },
  "basePath": "http://localhost:3000/api/v2",
  "resourcePath": "Cost of Living",
  "apis": [
    {
      "path": "/cost_of_living",
      "operations": [
        {
          "method": "GET",
          "summary": "Returns all locations.",
          "type": "string",
	  "nickname": "Api::V2::Coli#index"
	}
      ]
    },
    {
      "path": "/cost_of_living/{state}",
      "operations": [
        {
          "method": "GET",
          "summary": "Returns all available locations in a given state.",
          "type": "string",
          "nickname": "Api::V2::Coli#show_state",
          "parameters": [
            {
              "name": "state",
              "description": "The name of a US state.",
              "required": true,
              "type": "string",
              "paramType": "path"
            }
          ]
        }
      ]
    },
    {
      "path": "/cost_of_living/{state}/{city}",
      "operations": [
        {
          "method": "GET",
          "summary": "Returns cost of living information for a given city.",
          "type": "string",
          "nickname": "Api::V2::Coli#show_city",
          "parameters": [
            {
              "name": "state",
              "description": "The name of a US state.",
              "required": true,
              "type": "string",
              "paramType": "path"
            },
            {
              "name": "city",
              "description": "The name of a city in the given state.",
              "required": true,
              "type": "string",
              "paramType": "path"
            }
          ]
        }
      ]
    },
    {
      "path": "/cost_of_living",
      "operations": [
        {
          "method": "POST",
          "summary": "Returns cost of living information for two locations.",
          "type": "string",
	  "nickname": "Api::V2::Coli#show_two",
          "parameters": [
            {
              "name": "body",
              "description": "array of location objects",
              "required": true,
              "paramType": "body",
              "type": "array",
              "items": {
                "$ref": "Location"
              }
            }
          ]
	}
      ]
    }
  ],
  "models": {
    "Location": {
      "required": [
        "city", 
        "state"
      ],
      "properties": {
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        }
      }
    }
  }
}
